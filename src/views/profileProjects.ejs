<!DOCTYPE html>
<html lang="pt_br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
        <!-- GOOGLE FONTS -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
        
        <!-- FONT AWESOME CDN -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    

    <link rel="stylesheet" href="/css/profileProject.css">
    <script src="/utils/removeProject.js"></script>
    <title><%= context.profileName %></title>    
</head>
<body>
    <div class="main-header">
        <div class="home-container">
            <a href="/v1/"><p class="home-btn">Home</p></a>
        </div>
        <div class="academic-logo-container">
            <img src="/images/white-logo.png" alt="academic-logo" class="academic-logo">
        </div>
    </div>

    <div class="projects-container">
        <div class="projects-title">
            <p class="title">Projetos Atuais (Permitido add. mais <%= context.remainingSize %> projetos)</p>
        </div>
        <% if(context.data.length > 0){ %>
        <% for(let i=0; i < context.data.length; i++){ %>
        <div class="loaded-project">
            <div class="image-container">
            <% for(let j=0; j < context.data[i].image_data.length; j++){ %>
                <div class="project-image">
                    <img class="project-image-loaded" src="data:<%= context.data[i].image_mimetype[j] %>;base64,<%= context.data[i].image_data[j].toString('base64') %>" alt="project-image">
                </div>
            <% } %>
            </div>
            <div class="project-description">
                    <p class="project-desc"> <%= context.data[i].project_description %></p>
                </div>
            <div class="update-container">
                <div class="delete-group">
                    <!-- <i class="fa-solid fa-trash delete-icon" onclick="deleteProject({projectId: <%= context.data[i].project_id %>})" data-project-id="<%= context.data[i].project_id %>"></i> -->
                    <i class="fa-solid fa-trash delete-icon" data-project-id="<%= context.data[i].project_id %>"></i>
                </div>
                <div class="update-group">
                    <i class="fa-solid fa-pen update-icon" data-project-id="<%= context.data[i].project_id %>"> </i>
                </div>
            </div>
            </div>
        <% } %>
        <% } %>

    </div>

    <% if(context.remainingSize > 0){ %>
    <div class="upload-container">
        <form action="/v1/api/create/project" enctype="multipart/form-data" method="POST">
            <div class="project-desc-container">
                <p class="project-desc-title">Descricao do novo projeto</p>
                <textarea name="projectDesc" class="project-desc-txtarea" rows="10" required></textarea>
            </div>
            <div class="project-image-select-container">
                <label for="image-input" class="img-input-label" >Escolher imagens do novo projeto</label>
                <input type="file" multiple name="imageInput" class="image-input" id="image-input">
            </div>
            <div class="submit-container">
                <input type="submit" class="submit-btn" value="Enviar">
            </div>
        </form>
    </div>
    <% } %>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const deleteBtn = document.getElementsByClassName('delete-icon');
            for(let del of deleteBtn){
                del.addEventListener('click', (e) => {
                    // console.log(e);
                    let id = e.srcElement.dataset.projectId;
                    // console.log(Number(id));
                    deleteProject({projectId: Number(id)})
                })
            }
        })
    </script>
</body>
</html>